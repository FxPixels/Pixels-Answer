/**index.wxss**/
.footer{
  position: fixed;
  bottom: 0;
  width: 100%;
}

.header{
  height: 130rpx;
  position: relative;
  display: flex;
  align-items: center;
  padding: 40rpx 40rpx 0 40rpx;
}

.time>view:last-child{
  color: rgb(153,153,153);
  font-size: 40rpx;
}

.search-bar{
  margin-left: 15px;
}

.search-bar > input{
  background-color: rgb(238,238,238);
  padding: 0 15px;
  width: 250rpx;
  border-radius: 36rpx;
  font-size: 30rpx;
  height: 64rpx;
}

.list{
  margin-top: 10px;
}

.item{
  margin: 0 20px;
  border-radius: 12px;
  overflow: hidden;
  padding-top: 15px;
  height: 350rpx;
  position: relative;
  box-shadow: 0px 5px 10px 2px #eee;
  margin-bottom: 60rpx;
}

.item image{
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
}

.sign{
  position: absolute;
  padding-left: 15px;
  font-size: 28rpx;
  color: rgb(153,153,153);
  z-index: 100;
}

.title{
  position: absolute;
  top: 64rpx;
  padding-left: 15px;
  font-size: 40rpx;
  font-weight: bold;
  z-index: 100;
}

.desc{
  padding: 10px;
  width: calc(100% - 10px * 2);
  position: absolute;
  bottom: 0;
  background-color: #fff;
  font-size: 28rpx;
}

